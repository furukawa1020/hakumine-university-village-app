# NPM configuration for Netlify builds
engine-strict=false
save-exact=false
package-lock=true

# Cache settings
cache=.npm
prefer-offline=false

# Build optimization
progress=false
audit=false
fund=false

# 依存関係の競合解決
legacy-peer-deps=true
auto-install-peers=true
strict-peer-deps=false

# Netlify specific settings
unsafe-perm=true
